<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-3 bg-primary text-white vh-100 p-3">
      <h3 class="text-center mb-4">BRGY. 790</h3>
      <ul class="nav flex-column">
        <li class="nav-item">
          <a href="#" class="nav-link text-white">Announcement</a>
        </li>
        <li class="nav-item">
          <%= link_to 'Add request', new_barangay_request_path, class: 'nav-link text-white' %>
        </li>
        <li class="nav-item">
          <a href="#" class="nav-link text-white">Request History</a>
        </li>
      </ul>
      <div class="mt-4">
        <button class="btn btn-light w-100 mb-2">Edit Profile</button>
        <%= button_to 'Log out', destroy_barangay_user_session_path, method: :delete, class:'btn btn-danger w-100' %>
      </div>
    </div>

    <!-- Main Content -->
    <div class="col-md-9">
      <!-- Header Section -->
      <div class="d-flex justify-content-between align-items-center p-3">
        <h4>Announcements</h4>
        <input type="date" class="form-control w-25" id="announcement_date">
      </div>

      <!-- Announcements List -->
      <div class="p-3">
        <% @announcements.each do |announcement| %>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= announcement.title %></h5>
              <p class="card-text"><%= announcement.description %></p>
              <p class="text-muted small mb-0">Posted on <%= announcement.created_at.strftime('%B %d, %Y, %I:%M %p') %></p>
            </div>
          </div>
        <% end %>

        <!-- Pagination -->
        <div class="d-flex justify-content-center mt-3">
          <%= paginate @announcements %>
        </div>
      </div>
    </div>
  </div>
</div>
