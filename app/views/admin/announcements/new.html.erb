<!-- Main Content -->
<main class="col-md-9 p-4">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h2>Announcement</h2>
    </div>
    <div class="card-body">
      <%= form_with model: @announcement, method: :post, class: "needs-validation", local: true do |f| %>
        <div class="mb-3">
          <%= f.label :title, "Title", class: "form-label" %>
          <%= f.text_field :title, class: "form-control", placeholder: "Enter announcements title", required: true %>
        </div>
        <div class="mb-3">
          <%= f.label :description, "Description", class: "form-label" %>
          <%= f.text_area :description, class: "form-control", rows: 4, placeholder: "Enter announcements description", required: true %>
        </div>
        <div class="text-end">
          <%= f.submit "Create Announcement", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</main>
